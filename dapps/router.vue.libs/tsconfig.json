{
  "compilerOptions": {
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./built/",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false,
    "target": "es5"
  },
  "exclude": [
    "../../../node_modules/@evan.network"
  ],
  "include": [
    "./src/**/*",
    "../../vue/ts-shim.d.ts"
  ]
}